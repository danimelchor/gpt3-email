{
  "author": "Daniel Melchor",
  "version": "1.0.0",
  "description": "GPT-3 Autocomplete for GMail",
  "manifest_version": 3,
  "name": "GTP3Mail",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://mail.google.com/*",
    "https://outlook.office.com/*",
    "https://app.fastmail.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*",
        "https://outlook.office.com/*",
        "https://app.fastmail.com/*"
      ],
      "css": [
        "content.css"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "images/logo.png"
      ],
      "matches": [
        "https://mail.google.com/*",
        "https://outlook.office.com/*",
        "https://app.fastmail.com/*"
      ]
    }
  ],
  "action": {
    "default_icon": {
      "16": "images/popup-logo.png",
      "24": "images/popup-logo.png",
      "32": "images/popup-logo.png"
    },
    "default_popup": "index.html"
  },
  "icons": {
    "16": "images/popup-logo.png",
    "32": "images/popup-logo.png",
    "48": "images/popup-logo.png",
    "128": "images/popup-logo.png"
  }
}